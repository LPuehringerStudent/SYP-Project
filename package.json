{
  "name": "emberexchange",
  "version": "1.0.0",
  "description": "Ember Exchange Application",
  "main": "dist/backend/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/backend/app.js",
    "dev": "nodemon --exec ts-node src/backend/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "frontend:build": "cd src/frontend && npx ng build",
    "frontend:serve": "cd src/frontend && npx ng serve",
    "frontend:watch": "cd src/frontend && npx ng build --watch --configuration development",
    "frontend:test": "cd src/frontend && npx ng test"
  },
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.2.0",
    "@angular/router": "^21.1.0",
    "better-sqlite3": "^12.0.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "rxjs": "~7.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "http-status-codes": "^2.3.0",
    "jest": "^30.2.0",
    "jsdom": "^27.1.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "vitest": "^4.0.8"
  }
}
